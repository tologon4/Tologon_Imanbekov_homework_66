@model List<User>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


@if (Model.Count > 0)
        {
            <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s"
                style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">Список откликов</h1>
            @foreach (var applicant in Model)
            {
                <div class="job-item p-4 mb-4">
                    <div class="row g-4">
                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                            <img class="flex-shrink-0 img-fluid border rounded" src="@applicant.Avatar" alt="" style="width: 80px; height: 80px;">
                            <div class="text-start ps-4">
                                <h5 class="mb-3">@applicant.UserName</h5>
                                <span class="text-truncate me-3"><i class="bi bi-blockquote-right text-primary me-2"></i>@applicant.Email</span>
                                <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>$@applicant.PhoneNumber</span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                            <div class="d-flex mb-3">
                                <a class="text-primary" asp-action="Profile" asp-controller="Account" asp-route-id="@applicant.Id"> Перейти к пользователю </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
@section Scripts
{
    <script>
        let sendMessage = '@Url.Action("SendMessage", "Chat")';
            let currentUserResumes = JSON.parse('@Html.Raw(ViewBag.CurrentUserResumes)');
            let chatResults =  '@Url.Action("ChatResults", "Chat")';
            let currentUserId = '@ViewBag.CurrentUserId';
    </script>
    
}